<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
  </head>
  <body>
    <header class="row">
      <%= render 'layouts/header' %>
    </header><!-- end of header -->


    <section class="row">
      <div>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
      <%= yield %>
    </section><!-- end of section -->


    <footer class="row">
      <%= render 'layouts/footer' %>
    </footer><!-- end of footer-->
    <%= debug(params) if Rails.env.development? %>

  </body>
</html>
