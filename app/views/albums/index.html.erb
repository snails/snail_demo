<h1>Listing albums</h1>

<table>
  <tr>
    <th>User</th>
    <th>Group</th>
    <th>Name</th>
    <th>Description</th>
    <th>Total</th>
    <th>Privacy</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%= album.user_id %></td>
    <td><%= album.group_id %></td>
    <td><%= album.name %></td>
    <td><%= album.description %></td>
    <td><%= album.total %></td>
    <td><%= album.privacy %></td>
    <td><%= link_to 'Show', user_album_url(current_user,album) %></td>
    <td><%= link_to 'Edit', edit_user_album_path(current_user,album) %></td>
    <td><%= link_to 'Destroy', user_album_path(current_user,album), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

